<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <corners
        android:radius="12sp" />
    <gradient
        android:endColor="@color/button_bg"
        android:gradientRadius="2"
        android:startColor="@color/button_bg"
		android:type="linear"
        android:useLevel="true"/>
    <stroke
        android:width="2sp"
        android:color="@color/button_outline" />
</shape>

